<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.takusemba.cropme.CropLayout
      android:id="@+id/crop_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:cropme_background_alpha="80%"
      app:cropme_frame_height_percent="80%"
      app:cropme_frame_width_percent="80%"
      app:cropme_max_scale="3.0"
      app:cropme_overlay_shape="rectangle"
      app:cropme_with_border="true"
      app:layout_constraintBottom_toTopOf="@+id/select"
      app:layout_constraintDimensionRatio="h,1:1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

  </com.takusemba.cropme.CropLayout>

  <Button
      android:text="Pick 3D Model"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:id="@+id/launch_pick_model"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/crop_view"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
 />


  <ImageView
      android:layout_width="78dp"
      android:layout_height="97dp"
      tools:srcCompat="@tools:sample/avatars"
      android:id="@+id/model_preview_img"
      android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/launch_pick_model"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />
  <TextView
      android:text="Picked model:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/lable_text"
      android:textStyle="bold"
      android:layout_marginStart="16dp"

      app:layout_constraintStart_toEndOf="@+id/model_preview_img"
      app:layout_constraintTop_toTopOf="@+id/model_preview_img"
      app:layout_constraintBottom_toBottomOf="@+id/model_preview_text" />
  <TextView
      android:text="None"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/model_preview_text"
      android:layout_marginStart="16dp"

      app:layout_constraintStart_toEndOf="@+id/model_preview_img"
      app:layout_constraintTop_toBottomOf="@+id/lable_text"
      app:layout_constraintBottom_toBottomOf="@+id/model_preview_img" />



  <include layout="@layout/merge_crop_progress" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/crop"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
      android:src="@drawable/ic_baseline_check_24"
      android:contentDescription="@string/finished_cropping_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
